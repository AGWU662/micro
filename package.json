{
  "name": "crypto-trading-platform",
  "version": "1.0.0",
  "description": "Comprehensive crypto trading, mining, and P2P platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix client",
