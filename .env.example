# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/crypto-platform

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Admin Credentials (First Time Setup)
ADMIN_EMAIL=admin@cryptoplatform.com
ADMIN_PASSWORD=Admin@123456

# Email Configuration (Optional - for email notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
PLATFORM_NAME=Elite-Cloud Mining Company

# Client URL
CLIENT_URL=http://localhost:3000

# Crypto API (Optional - for real crypto prices)
CRYPTO_API_KEY=your_crypto_api_key

# Live Chat Configuration (Choose one: tawk, intercom, crisp, facebook)
CHAT_PROVIDER=tawk

# Tawk.to Configuration (Free - https://www.tawk.to/)
TAWK_PROPERTY_ID=your_tawk_property_id
TAWK_WIDGET_ID=your_tawk_widget_id

# Intercom Configuration (Paid - https://www.intercom.com/)
INTERCOM_APP_ID=your_intercom_app_id

# Crisp Configuration (Freemium - https://crisp.chat/)
CRISP_WEBSITE_ID=your_crisp_website_id

# Facebook Messenger Configuration
FACEBOOK_PAGE_ID=your_facebook_page_id
